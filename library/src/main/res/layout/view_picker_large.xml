<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@android:color/holo_orange_light">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_and_padding_default">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/margin_and_padding_default"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="invisible"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1:1"
                android:adjustViewBounds="true"
                android:src="@drawable/img_square_in_circle" />

            <FrameLayout
                android:id="@+id/large_color_window"
                android:padding="@dimen/margin_and_padding_default"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1:1"
                android:adjustViewBounds="true" />
        </FrameLayout>

        <ImageView
            android:id="@+id/large_thumb"
            android:src="@drawable/thumb_ring"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <com.gerardbradshaw.library.util.ColorSlider
        android:id="@+id/large_color_slider"
        android:paddingStart="@dimen/margin_and_padding_default"
        android:paddingEnd="@dimen/margin_and_padding_default"
        android:paddingBottom="@dimen/margin_and_padding_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/large_preview_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_and_padding_default"
        android:paddingStart="@dimen/margin_and_padding_default"
        android:paddingEnd="@dimen/margin_and_padding_default">

        <ImageView
            android:id="@+id/large_preview_old"
            android:layout_width="80dp"
            style="@style/PreviewStyle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_right_arrow"/>

        <ImageView
            android:id="@+id/large_preview_new"
            android:layout_width="80dp"
            style="@style/PreviewStyle" />
    </LinearLayout>

</LinearLayout>