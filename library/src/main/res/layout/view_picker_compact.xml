<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/compact_menu_frame"
        android:paddingHorizontal="@dimen/margin_and_padding_default"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <!-- TEXT MENU -->
        <LinearLayout
            android:id="@+id/compact_text_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/compact_text_menu_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:minWidth="40dp"
                android:text="@string/color"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_drop_down_arrow" />
        </LinearLayout>

        <!-- IMAGE MENU -->
        <ImageView
            android:id="@+id/compact_image_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingVertical="12dp"
            android:src="@drawable/ic_sliders"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>



    <!-- SLIDER -->
    <com.gerardbradshaw.library.util.ColorSlider
        android:id="@+id/compact_color_slider"
        style="@style/ColorSliderInLinearLayoutStyle" />

    <!-- PREVIEW -->
    <ImageView
        android:id="@+id/compact_preview"
        style="@style/PreviewStyle" />
</LinearLayout>